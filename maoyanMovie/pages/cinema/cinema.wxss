/* cinema.wxss */
@import "./cinema_item_component/cinema_item_component.wxss";

.search {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 90rpx;
    padding:0 20rpx 0 28rpx;
    border-bottom: 1rpx solid #d7d7d7;
    background-color: #f4f4f4;
}
.search > text {
    font-size: 24rpx;
    color: #656565;
}
.search > view {
    margin-left: 3px;
    border-top: 5px solid #c9c9c9;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
}
.search > input {
    height: 50rpx;
    margin-left: 30rpx;
    flex-grow: 1;
    border: 1rpx solid #e5e5e5;
    border-radius: 5px;
    background-color: #ffffff;
    text-align: center;
}
.placeholder{
    padding-left: 260rpx;
    font-size: 26rpx;
    background: url("../../img/search-gray.png") no-repeat 230rpx center;
    background-size: 26rpx 26rpx;
    text-align: left;
}