/* movieIndex.wxss */
@import './movie_item_component/movie_item_component.wxss';

page{
    margin: 0;
    padding: 0;
    font-size: 14px;
    font-family: "Microsoft YaHei UI",'sans-serif';
}
.header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
    border-bottom: 1px solid #dadada;
}
.city{
    margin-left: 30rpx;
    color: #656565;
    font-size: 13px;
}
.city::after{
    display: inline-block;
    margin-left: 3px;
    content: '';
    vertical-align: middle;
    border-top: 10rpx solid #c9c9c9;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
}
.menu{
    display: flex;
    justify-content: space-between;
    width: 250rpx;
    height: 100%;
    font-weight: bold;
    color: #656565;
}
.menu>text{
    width:90rpx;
    height: 86rpx;
    line-height: 90rpx;
    text-align: center;
    border-bottom: 4rpx solid transparent;
    border-bottom-width: 4rpx;
    border-bottom-style: solid;
}
.menu .menu-selected{
    border-bottom-color: #dc403a;
    color: #dc403a;
}
.searchBut{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 90rpx;
    height: 90rpx;
    border-left: 1px solid #e9e9e9;
}

